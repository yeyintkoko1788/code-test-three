<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/color_grey"/>

            <stroke
                android:width="2dp"
                android:color="@color/color_pink"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/color_transparent"/>
            <stroke
                android:width="2dp"
                android:color="@color/color_pink"/>
        </shape>
    </item>
</selector>